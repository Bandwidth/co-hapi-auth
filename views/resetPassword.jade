extends layout

block content
  form(action="/auth/postResetPassword", method="POST", role="form")
    legend Reset password
    div.form-group
      label New Password
      input(type="password", name="password", required).form-control
    div.form-group
      label Repeat Password
      input(type="password", name="repeatPassword", required).form-control
    div.form-group
      input(type="hidden", name="token", value=data.token)
      input(type="submit", value="Reset").btn.btn-primary
